<div id='calendar-picker'>
    <ul class="calendar">
        <li class="title">
            <div {{action 'previousMonth'}}><</div>
            <div>{{formattedDay}}</div>
            <div {{action 'nextMonth'}}>></div>
        </li>
        <li class="day-header">
            <div class="small-1 medium-1 large-1 day">
                <span>Sun</span>
            </div>
            <div class="small-1 medium-1 large-1 day">
                <span>Mon</span>
            </div>
            <div class="small-1 medium-1 large-1 day">
                <span>Tue</span>
            </div>
            <div class="small-1 medium-1 large-1 day">
                <span>Wed</span>
            </div>
            <div class="small-1 medium-1 large-1 day">
                <span>Thu</span>
            </div>
            <div class="small-1 medium-1 large-1 day">
                <span>Fri</span>
            </div>
            <div class="small-1 medium-1 large-1 day">
                <span>Sat</span>
            </div>
        </li>
        {{#each week in weeks}}
            <li class="week">
                {{#each day in week}}
                    <div {{action 'chooseDate' day}} {{bind-attr class=":day :large-1 :medium-1 :small-1 day.today day.inMonth day.valence day.chosen"}}>
                        {{day.formattedDay}}
                        {{#each event in day}}
                            {{event}}
                        {{/each}}
                    </div>
                {{/each}}
            </li>
        {{/each}}

    </ul>
</div>